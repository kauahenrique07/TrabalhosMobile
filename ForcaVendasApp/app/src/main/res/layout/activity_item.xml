<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Itens"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Código"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editCodigoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o código do item"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Descrição:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editDescricaoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe a descrição do item"
            android:inputType="text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Valor Unitário:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editVlrUnitItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o valor unitário do item"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Unidade de Medida:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/editUnMedidaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe a unidade de medida do item"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSalvarItem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Salvar" />

    </LinearLayout>

</ScrollView>
